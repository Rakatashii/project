<%= form_for(@user, url: signup_path) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
  <!-- how does the button know to direct 'user_params' to a new User object via the create action? -->
  <!-- when the form is submitted, each param is set to a User object attribute via user_attributes and if @user.valid? -> @user.save -> redirect_to @user (i.e., create /user/new -> /user/n -->
  <%= f.submit "Create my account", class: "btn btn-primary" %>
<% end %>